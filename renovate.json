{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "packagePatterns": ["^lscr.io\\/linuxserver\\/"],
      "versionScheme": "regex:^(?<compatibility>.*(\\d+\\.)?)(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?$"
    },
    {
      "packagePatterns": ["^linuxserver\\/overseerr"],
      "versionScheme": "regex:^(?<compatibility>.*(\\d+\\.)?)(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?$",
      "allowedVersions": "/^(\\d{1,3}\\.)(\\d*\\.)*\\d*$/"
    },
    {
      "packagePatterns": ["^linuxserver\\/tautulli"],
      "versionScheme": "regex:^(?<compatibility>.*(\\d+\\.)?)(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?$",
      "allowedVersions": "/^(\\d{1,3}\\.)(\\d*\\.)*\\d*$/"
    },
    {
      "packagePatterns": ["^lscr.io\\/linuxserver-labs\\/plextraktsync"],
      "versionScheme": "regex:^(?<compatibility>.*(\\d+\\.)?)(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-(ls(?<build>\\d+))?$"
    },
    {
      "packagePatterns": ["^ghcr\\.io\\/netbootxyz\\/netbootxyz"],
      "versionScheme": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-nbxyz(?<digest>\\d+)$"
    },
    {
      "packagePatterns": ["^linuxserver\\/deluge"],
      "versionScheme": "regex:^(?<compatibility>.*(\\d+\\.)?)(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?$",
      "allowedVersions": "/^(\\d{1,2}\\.)(\\d*\\.)*\\d*$/"
    },
    {
      "packagePatterns": ["^linuxserver\\/jellyfin"],
      "versionScheme": "regex:^(?<compatibility>.*(\\d+\\.)?)(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?$"
    },
    {
      "packagePatterns": ["^linuxserver\\/changedetection.io"],
      "versionScheme": "regex:^(?<compatibility>.*(\\d+\\.)?)(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)?$",
      "allowedVersions": "/^(\\d{1,3}\\.)(\\d*\\.)*\\d{1,3}$/"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["docker.io/library/postgres", "postgres"],
      "matchPaths": [
        "network-services/docker-compose.yml",
        "utility-services/docker-compose.yml"
      ],
      "matchDepNames": [
        "services.authentik-postgresql.image",
        "services.postgres-paperless-ngx.image"
      ],
      "enabled": false
    }
  ]
}
